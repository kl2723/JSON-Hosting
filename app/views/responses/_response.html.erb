<li>
	<span class="response_title"><%= link_to wrap(response.title), response, :target => "_blank" %></span>
	<span class="timestamp">
		Uploaded <%= time_ago_in_words(response.created_at) %> ago.
	</span>
	
	<% if current_user == response.user || current_user.admin? %>
		<%= link_to "edit", edit_response_path(response) %>
									
		<%= link_to "delete", response, method: :delete,
			 							data: { confirm: "Are you sure?" },
										title: response.title %>
	<% end %>
	
</li>